<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro"  name="robot">


    <xacro:include filename="inertial_macros.xacro"/>

    <material name="white" >
        <color rgba="1 1 1 1" />
    </material>

    <material name="orange" >
        <color rgba="1 0.3 0.1 1" />
    </material>

    <material name="black" >
        <color rgba="0 0 0 1" />
    </material>

    <material name="blue" >
        <color rgba="0.2 0.2 1 1" />
    </material>

    <!-- BASE LINK  -->

    <link name="base_link">

    </link>

    <!-- CHASSIS LINK -->

    <joint name="chassis_joint" type="fixed">
        <parent link="base_link"/>
        <child link="chassis"/>
        <origin xyz="-0.22 0 -0.05"/>
    </joint>

    <link name="chassis">
        <visual>
            <origin xyz="0.325 0 .075"/>
            <geometry>
                <box size="0.65 0.43 0.10"/>
            </geometry>
            <material name="white"/>
        </visual>
        <collision>
            <origin xyz="0.325 0 .075"/>
            <geometry>
                <box size="0.65 0.43 0.15"/>
            </geometry>
        </collision>
        <xacro:inertial_box mass="1.5" x="0.65" y="0.43" z="0.15">
            <origin xyz="0.325 0 0.075" rpy="0 0 0"/>
        </xacro:inertial_box>
    </link>

    <!-- WHEELS -->

    <joint name="left_wheel_joint" type="continuous">
        <parent link="base_link"/>
        <child link="left_wheel"/>
        <origin xyz="0 0.215 0" rpy="-${pi/2} 0 0"/>
        <axis xyz="0 0 1"/>
    </joint>

    <link name="left_wheel">
        <visual>
            <origin xyz="0 0 .015"/>
            <geometry>
                <cylinder radius=".125" length=".03"/>
            </geometry>
            <material name="blue"/>
        </visual>
        <collision>
            <origin xyz="0 0 .015"/>
            <geometry>
                <cylinder radius=".125" length=".03"/>
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass="0.5" length="0.03" radius="0.125">
            <origin xyz="0 0 .015" rpy="0 0 0"/>
        </xacro:inertial_cylinder>
    </link>

    <joint name="right_wheel_joint" type="continuous">
        <parent link="base_link"/>
        <child link="right_wheel"/>
        <origin xyz="0 -0.215 0" rpy="${pi/2} 0 0"/>
        <axis xyz="0 0 -1"/>
    </joint>

    <link name="right_wheel">
        <visual>
            <origin xyz="0 0 .015"/>
            <geometry>
                <cylinder radius=".125" length=".03"/>
            </geometry>
            <material name="blue"/>
        </visual>
        <collision>
            <origin xyz="0 0 .015"/>
            <geometry>
                <cylinder radius=".125" length=".03"/>
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass="0.5" length="0.03" radius="0.125">
            <origin xyz="0 0 .015" rpy="0 0 0"/>
        </xacro:inertial_cylinder>
    </link>

    <!-- CASTER WHEELS -->

    <joint name="right_caster_joint" type="fixed">
        <parent link="base_link"/>
        <child link="right_caster"/>
        <origin xyz="0.37 -0.165 -.065"/>
    </joint>

    <link name="right_caster">
        <visual>
            <origin xyz="0 0 0"/>
            <geometry>
                <sphere radius=".06"/>
            </geometry>
            <material name="black"/>
        </visual>
        <collision>
            <geometry>
                <sphere radius=".06"/>
            </geometry>
        </collision>
        <xacro:inertial_sphere mass="0.5" radius="0.06">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_sphere>
    </link>

    <gazebo reference="right_caster">
        <material>Gazebo/White</material>
        <mu1 value="0.001"/>
        <mu2 value="0.001"/>
    </gazebo>

    <joint name="left_caster_joint" type="fixed">
        <parent link="base_link"/>
        <child link="left_caster"/>
        <origin xyz="0.37 0.165 -.065"/>
    </joint>

    <link name="left_caster">
        <visual>
            <origin xyz="0 0 0"/>
            <geometry>
                <sphere radius=".06"/>
            </geometry>
            <material name="black"/>
        </visual>
        <collision>
            <geometry>
                <sphere radius=".06"/>
            </geometry>
        </collision>
        <xacro:inertial_sphere mass="0.5" radius="0.06">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_sphere>
    </link>

    <gazebo reference="left_caster">
        <material>Gazebo/White</material>
        <mu1 value="0.001"/>
        <mu2 value="0.001"/>
    </gazebo>
</robot>